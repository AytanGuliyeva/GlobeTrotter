<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlacesDetailFragment">

    <!-- Üstteki Görsel -->
    <ImageView
        android:id="@+id/buttonImage"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/rounded_bottom_corners"
        android:padding="5dp"
        app:layout_constraintBottom_toTopOf="@id/guideline3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="centerCrop"
        tools:src="@drawable/add_post" />

    <!-- Profil Fotoğrafları ve Sayısı -->
    <LinearLayout
        android:id="@+id/profilesLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/buttonImage"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp">

        <ImageView
            android:id="@+id/profileImage1"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/icon_favourites"
            android:layout_marginEnd="-10dp"
            android:background="@drawable/circle_back"
            android:scaleType="centerCrop"
            android:contentDescription="Profile 1" />

        <ImageView
            android:id="@+id/profileImage2"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/icon_flight"
            android:layout_marginEnd="-10dp"
            android:background="@drawable/circle_back"
            android:scaleType="centerCrop"
            android:contentDescription="Profile 2" />

        <TextView
            android:id="@+id/remainingUsers"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:background="@drawable/circle_back"
            android:gravity="center"
            android:text="+60"
            android:textColor="@color/blue"
            android:layout_marginStart="-10dp"
            android:textStyle="bold"/>
    </LinearLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.45" />

</androidx.constraintlayout.widget.ConstraintLayout>
